doctype html
html 
  head
    meta(charset='utf-8')
  body
    h1 
      a(href='/topic')'Server Side JavaScript'
    ol
      each title in titles
        li
          a(href='/topic/' + title.id)=title.title
    article
      if topic
        h2= topic.title
        =topic.description
        div='by ' + topic.author
        
      else
        h2 Welcome
        | This is serverside JavaScript tutorial
    ul
      li
        a(href='/topic/add') add
      if topic
        li
          a(href='/topic/'+topic.id+'/edit') edit
      if topic
        li
          a(href='/topic/'+topic.id+'/delete') delete
      
